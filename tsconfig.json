{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["src/**/*"]
}
